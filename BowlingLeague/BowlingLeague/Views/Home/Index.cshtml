@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<div>
    <h3>Bowlers</h3>

    <table class="table table-bordered table-striped align-content-center">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Phone</th>
                <th>Team</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Bowler b in Model)
            {
                <tr>
                    <td>@b.BowlerFirstName</td>
                    <td>@b.BowlerLastName</td>
                    <td>@b.BowlerAddress</td>
                    <td>@b.BowlerCity</td>
                    <td>@b.BowlerState</td>
                    <td>@b.BowlerZip</td>
                    <td>@b.BowlerPhoneNumber</td>
                    <td>@b.TeamID</td>
                </tr>
            }
        </tbody>
    </table>
</div>
